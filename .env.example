# 服务器配置
SERVER_PORT=8080
GIN_MODE=debug

# 数据库配置
DATABASE_URL=postgres://user:password@localhost:5432/ai_knowledge_platform?sslmode=disable
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=ai_knowledge_platform
DB_SSLMODE=disable

# Redis配置
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# OSS配置 (阿里云对象存储)
# 注意：OSS_ACCESS_KEY_ID 和 OSS_ACCESS_KEY_SECRET 是阿里云OSS Go SDK V2的标准环境变量名
OSS_ACCESS_KEY_ID=your_access_key_id
OSS_ACCESS_KEY_SECRET=your_access_key_secret
OSS_BUCKET_NAME=your_bucket_name
OSS_REGION=cn-hangzhou
OSS_ENDPOINT=

# KMS配置 (密钥管理服务)
KMS_ENDPOINT=
KMS_ACCESS_KEY_ID=your_kms_access_key_id
KMS_ACCESS_KEY_SECRET=your_kms_access_key_secret
KMS_KEY_ID=your_kms_key_id
KMS_REGION=cn-hangzhou